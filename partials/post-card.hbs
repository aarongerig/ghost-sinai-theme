<div class='js-grid__col o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m o-grid__col--1-3-l js-post-card-wrap'>

  <div class='c-post-card'>
    {{#if feature_image}}
      <div class='c-post-card__media'>
        <a href='{{ url }}' class='c-post-card__image-link' aria-hidden='true' tabindex='-1'>
          <img
            alt='{{ title }}'
            class='c-post-card__image js-fadein'
            srcset='
              {{ img_url feature_image size='md' }} 385w,
              {{ img_url feature_image size='lg' }} 770w,
              {{ img_url feature_image size='xl' }} 1540w'
            sizes=' (min-width: 1024px) 380px, (min-width: 640px) 600px, 100vw'
            src='{{ img_url feature_image size='lg' }}'
          >
          {{#if featured}}
            <span title='{{t "Featured Post" }}'>
              <span class='c-post-card--featured__icon' data-icon='ei-star' data-size='s'></span>
            </span>
          {{/if}}
        </a>
      </div>
    {{/if}}

    <div class='c-post-card__content {{#unless feature_image}} c-post-card__content--no-image {{/unless}}'>
      <div class='c-post-card__meta'>
        <time class='c-post-card__date' datetime='{{ date format='YYYY-MM-DD' }}' title='{{ date format='LL' locale='de-ch' }}'>{{ date format='LL' locale='de-ch' }}</time>
        {{#if tags}}
          <div class='c-post-card__tags'>
            â€¢ {{ tags separator=' / ' limit='1' }}
          </div>
        {{/if}}
      </div>

      <h2 class='c-post-card__title'>
        <a href='{{ url }}' class='c-post-card__title-link'>
          {{ title }}
        </a>
      </h2>

      {{#if excerpt}}
        <p class='c-post-card__excerpt'>{{ excerpt }}</p>
      {{/if}}
    </div>
  </div>

</div>