<!-- Get related posts based on tags -->

{{#get 'posts' filter='tags:[{{post.tags}}]+id:-{{post.id}}' include='tags' order='published_at desc' limit='3' as |related-posts|}}
  {{#if related-posts}}
    <hr>
    <div class='c-related'>
      <div class='o-grid'>
        <div class='o-grid__col o-grid__col--full'>
          <h3 class='c-related__title'>{{t 'You Might Be Interested In' }}</h3>
        </div>
        {{> loop }}
      </div>
    </div>
  {{/if}}
{{/get}}